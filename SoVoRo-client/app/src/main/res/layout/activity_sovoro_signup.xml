<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoVoRoSignup"
    android:background="@color/amber_200"
    >
    <ImageView
        android:id="@+id/signupLogo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/text_logo"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        />

    <EditText
        android:id="@+id/sovoroSignupId"

        style="@style/EditText_Style"
        android:hint="id"
        app:layout_constraintTop_toBottomOf="@+id/signupLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/sovorosignuppassword"

        style="@style/EditText_Style"
        android:hint="password"
        app:layout_constraintTop_toBottomOf="@+id/sovoroSignupId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:maxLines="16"
        android:inputType="textWebPassword"
        />
    <EditText
        android:id="@+id/sovoroSignupPasswordCheck"

        style="@style/EditText_Style"
        android:hint="password check"
        app:layout_constraintTop_toBottomOf="@+id/sovorosignuppassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:maxLines="16"
        android:inputType="textWebPassword"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sovoroSignupNicknameLayout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sovoroSignupPasswordCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/sovorosignupnickname"

            style="@style/EditText_Style"
            android:hint="nickname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/sovoroSignupNicknameDuplicationCheck"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/jua"
            android:background="@color/amber_300"
            android:textSize="10sp"
            android:text="닉네임 중복확인"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sovoroSignupSmsLayout"

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/sovoroSignupNicknameLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/sovoroSignupSmsSendInput"

            style="@style/EditText_Style"
            android:hint="전화번호 인증"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLength="11"
            android:inputType="phone"
            android:singleLine="true"/>
        <Button
            android:id="@+id/sovoroSignupSmsSend"

            style="@style/Button_Style"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/amber_300"
            android:text="인증번호 발송"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sovoroSignupSmsConfirmLayout"

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sovoroSignupSmsLayout"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/sovoroSmsConfirmInput"

            style="@style/EditText_Style"
            android:hint="인증번호 입력"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLength="11"
            android:inputType="phone"
            />
        <Button
            android:id="@+id/sovoroSignupSmsConfirm"

            style="@style/Button_Style"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="인증번호 확인"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/amber_300"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/sovoroSignupErrText"

        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sovoroSignupSmsConfirmLayout"
        android:textSize="10sp"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/sovoroSignup"

        android:layout_marginTop="20dp"
        style="@style/Button_Style"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/sovoroSignupErrText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/amber_300"
        />
</androidx.constraintlayout.widget.ConstraintLayout>