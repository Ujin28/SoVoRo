<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoVoRoMainLoading"
    android:background="@color/amber_200"
    >
    <ImageView
        android:id="@+id/sovoro_loading_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/loading_bbang"
        app:layout_constraintVertical_bias="0.4"
        />
    <TextView
        android:id="@+id/sovoro_loading_text"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 SoVoRo가 다가오는 중"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sovoro_loading_image"
        android:fontFamily="@font/jua"
        android:textColor="@color/black_grey"
        android:textSize="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>